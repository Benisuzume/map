#!/usr/bin/env lua

local Tasks = require ('map.tasks')

return Tasks.run {
	arguments = { ... },

	tasks = {
		'build',
		'optimize'
	},

	help = [[
# map optimize

Optimizes the map.  This will build both a non-optimized version as well as
one that is optimized.  Currently, the only optimizations performed are done
on the map script via Wurst.

## Usage
    optimize [options]
    optimize <configuration>

## Options
    --version    Displays the version number.
    --help       Displays this help message.]]
}
