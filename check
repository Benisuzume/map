#!/usr/bin/env lua

if not arg [1] or arg [1] == '--help' then
	io.stdout:write ([[
map check - Parse JASS scripts and validate their syntax

Usage:
  check [options]
  check <configuration>

Options:
  --version    Displays the version number.
  --help       Displays this help message.
]])

	os.exit (0)
elseif arg [1] == '--version' then
	local Version = require ('map.version')

	io.stdout:write (string.format ([[
map check %d.%d.%d
]], Version.major, Version.minor, Version.patch))

	os.exit (0)
end

local Settings = require ('map.settings')
local settings, message = Settings.read ()

if not settings then
	io.stderr:write (message, '\n')
	os.exit (1)
end

local Map = require ('map.common')
local status, _, output = Map.check_scripts (settings)

if status then
	io.stdout:write (output)
	os.exit (0)
else
	io.stderr:write (output)
	os.exit (1)
end
