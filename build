#!/usr/bin/env lua

local Tasks = require ('map.tasks')

return Tasks.run {
	arguments = { ... },
	tasks = {
		'build'
	},

	help = [[
# map build

Builds the map, including but not limited to parsing and combining Jass
scripts, inlining trigger strings, processing constants and objects, and
importing files.

## Usage
    build [options]
    build <configuration>

## Options
    --version    Displays the version number.
    --help       Displays this help message.]]
}
